<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <title>Signup</title>
    <link rel="stylesheet" href="/css/signup.css">
</head>

<body>
    <main class="signup_container">
        <h2>
            Signup
        </h2>

        <form id="signupForm" class="signup_Form">
            <input name="name" id="name" placeholder="Full name" autocomplete="name" />

            <span id="nameError" class="error"></span>

            <input name="email" id="email" placeholder="Email" type="email" autocomplete="email" />

            <span id="emailError" class="error"></span>

            <div class="password-container">
                <input name="password" id="password" placeholder="Password" type="password"
                    autocomplete="new-password" />

                <button type="button" id="togglePassword" class="toggle-password">
                    👁️
                </button>
            </div>

            <span id="passwordError" class="error"></span>

            <div class="password-container">
                <input name="confirmPassword" id="confirmPassword" placeholder="Confirm password" type="password"
                    autocomplete="new-password" />

                <button type="button" id="toggleConfirmPassword" class="toggle-password">
                    👁️
                </button>
            </div>

            <span id="confirmPasswordError" class="error"></span>

            <button type="submit" class="signup_button">
                Signup
            </button>
        </form>

        <p>
            Already have an account?

            <a href="/login">
                Login here
            </a>
        </p>

        <script src="/js/signup.js"></script>
    </main>
</body>

</html>